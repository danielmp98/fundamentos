#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;
void main () {
	int A,B,R,Opcion;
	cout<<"Ingrese R"<<endl;
	cin>>R;
	do { 
		cout<<"1.-Calcular el perimetro"<<endl;
		cout<<"2.-Calcular el area"<<endl;
		cout<<"3.-Calcular el volumen"<<endl;
		cout<<"4.-Fin"<<endl;
		cout<<"Elige una opcion:"<<endl;
		cin>>opcion;
		switch (opcion) {
			case 1: P=(2*3.1416*R);break;
			case 2: A=(4*3.1416*R*R);break;
			case 3: V=((4/3)*3.1416*R*R*R);break;
			case 4: Fin;break;
			case 0; cout<<"salir"<<endl;break;
			default:cout<<"opcion invalida"<<endl;
		}
			cout<<"El resultado es"<<R<<endl;
	}
		while (opcion!=0);
		getch ();

}
