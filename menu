#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "stdlib.h"//comentario

using namespace std;
void main () {
	int a,b,c,r,opcion;
	cout<<"ingrese a y b"<<endl;
	cin>>a>>b;
	do {
		cout<<"1.-Suma"<<endl;
		cout<<"2.-Resta"<<endl;
		cout<<"3.-Producto"<<endl;
		cout<<"4.-Divison"<<endl;
		cout<<"0.-Salida"<<endl;
		cout<<"Elige una opcion:"<<endl;
		cin>>opcion;
		switch (opcion){
		case 1:r=a+b;break;
		case 2:r=a-b;break;
		case 3:r=a*b;break;
		case 4:r=a/b;break;
		case 0: cout<<"salir"<<endl;break;
		default:cout<<"opcion invalida"<<endl;
		}
		cout<<"El resultado es"<<r<<endl;
		getch();
		system("cls");
	} while(opcion!=0);
	getch();
}
